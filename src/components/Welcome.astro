---
const { initials, slogan } = Astro.props;
---

<div
  class="flex items-center justify-center min-h-screen bg-gradient-to-r from-blue-900 to-blue-600 text-center"
>
  <div
    class="bg-white text-black p-12 rounded-3xl shadow-xl max-w-lg mx-4 md:mx-0"
  >
    <!-- Iniciales -->
    <div
      class="text-8xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-blue-500 to-blue-300"
    >
      {initials}
    </div>

    <!-- Título -->
    <h1 class="text-5xl font-semibold mt-6 text-gray-800">Portafolio</h1>

    <!-- Eslogan -->
    <p class="text-xl mt-4 text-gray-600">
      {slogan}
    </p>

    <!-- Línea separadora -->
    <div class="mt-8 w-24 mx-auto border-t-4 border-blue-600"></div>
  </div>
</div>
